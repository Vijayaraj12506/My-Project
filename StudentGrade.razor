@page "/StudentGradeReport"
@using System.ComponentModel.DataAnnotations

<h2>Student Grade Report</h2>

@if (grades == null || grades.Count == 0)
{
    <p>No grades available.</p>
}
else
{
    <table class="grade-table">
        <thead>
            <tr>
                <th>Course</th>
                <th>Grade</th>
                <th>Remarks</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in grades)
            {
                <tr>
                    <td>@item.CourseName</td>
                    <td>@item.Grade</td>
                    <td>@item.Remarks</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<GradeItem> grades = new();

    protected override void OnInitialized()
    {
        // Sample mock data; replace with real data from service or DB
        grades = new List<GradeItem>
        {
            new GradeItem { CourseName = "Mathematics", Grade = "A", Remarks = "Excellent" },
            new GradeItem { CourseName = "Science", Grade = "B+", Remarks = "Very Good" },
            new GradeItem { CourseName = "English", Grade = "A-", Remarks = "Great Job" },
            new GradeItem { CourseName = "History", Grade = "B", Remarks = "Good" }
        };
    }

    public class GradeItem
    {
        public string CourseName { get; set; } = string.Empty;
        public string Grade { get; set; } = string.Empty;
        public string Remarks { get; set; } = string.Empty;
    }
}

<style>
    .grade-table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 1rem;
    }
    .grade-table th, .grade-table td {
        border: 1px solid #ccc;
        padding: 0.5rem;
        text-align: left;
    }
    .grade-table th {
        background-color: #f2f2f2;
    }
</style>
